<h1>AdminsBackoffice::Admins#index</h1>
<p>Find me in app/views/admins_backoffice/admins/index.html.erb</p>

<h1>Admins</h1>

<table>
    <thead>
        <tr>
            <th>Id</th>
            <th>Email</th>
            <th>
                <%= link_to new_admins_backoffice_admin_path do %>
                    <button>Criar Novo Administrador</button>
                <% end %>
            </th>
        </tr>
    </thead>
    <tbody>
        <% @admins.each do |admin| %>
        <tr>
            <td><%= admin.id %></td>
            <td><%= admin.email %></td>
            <td>
                <%= link_to edit_admins_backoffice_admin_path(admin)  do %>
                    <button>Editar</button>
                <% end %>
                <%= link_to admins_backoffice_admin_path(admin), method: :delete, data: { confirm: "Deseja realmente excluir este administrador?"}  do %>
                    <button>Deletar</button>
                <% end %>  
            </td>
        </tr>
        <% end %>
    </tbody>    
</table>

<%= link_to 'Voltar para admins_backoffice', admins_backoffice_welcome_index_path %>
